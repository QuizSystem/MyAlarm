<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/light_blue</item>
    </style>

    <style name="layout_repeat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

    <style name="text_widget_hour">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_clock_widget_clock_text_size</item>
    </style>

    <style name="text_widget_second">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_clock2_widget_clock_text_size</item>
    </style>

    <style name="image_fragment_setting_clocks">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/image_functions_setting_activity_padding_left</item>
        <item name="android:paddingTop">@dimen/image_functions_setting_activity_padding_top</item>
    </style>

    <style name="text_fragment_setting_clocks">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/text_clock_setting_activity_padding_left</item>
        <item name="android:textSize">@dimen/text_size_functions_setting_activity</item>
    </style>

    <style name="text_fragment_setting_functions_clocks">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/text_functions_setting_activity_padding_left</item>
        <item name="android:textSize">@dimen/text_size_functions_setting_activity</item>
    </style>

    <style name="AlarmDetailItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="AlarmDetailItemVerticalLinearLayout" parent="AlarmDetailItemLayout">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AlarmDetailItemHorizontalLinearLayout" parent="AlarmDetailItemLayout">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AlarmDetailItemTextViewTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/alarm_detail_text_title</item>
    </style>

    <style name="item_radio_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textSize">@dimen/snooze_item_text_size</item>
        <item name="android:layout_marginRight">@dimen/margin_medium</item>
        <item name="android:paddingLeft">@dimen/padding_medium</item>
        <item name="android:paddingTop">@dimen/padding_medium</item>
        <item name="android:paddingBottom">@dimen/padding_medium</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="button_sleep_timer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="layout_black">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="layout_w_h_match_wrap_padding">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

    <style name="width_height_2wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_view_display">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:paddingLeft">@dimen/margin_small</item>
    </style>

    <style name="item_checkbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textSize">@dimen/item_checkbox_text_size</item>
        <item name="android:layout_marginRight">@dimen/margin_medium</item>
        <item name="android:paddingLeft">@dimen/padding_medium</item>
        <item name="android:paddingTop">@dimen/padding_medium</item>
        <item name="android:paddingBottom">@dimen/padding_medium</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="text_sleep_timer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size1_timer_sleep_activity</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingTop">@dimen/padding_medium</item>
        <item name="android:paddingBottom">@dimen/padding_medium</item>
    </style>

    <style name="text_view_advanced">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/padding_medium</item>
        <item name="android:paddingLeft">@dimen/padding_medium</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="myTimePickerStyle" parent="@android:style/Theme.Holo.Dialog.NoActionBar">
        <item name="android:numbersTextColor">@color/white</item>
        <item name="android:numbersSelectorColor">@color/black</item>
    </style>
</resources>
